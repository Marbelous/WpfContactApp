<UserControl x:Class="WpfContactApp.Controls.ContactControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfContactApp.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="300">
    <Grid Background="#50EEEEEE">
        <StackPanel Margin="5">
            <TextBlock Name="nameTextBlock" Text="First Lastname" FontSize="20" FontWeight="Bold"/>
            <TextBlock Name="emailTextBlock" Text="someone@someplace.com" FontSize="15" Foreground="Aqua"/>
            <TextBlock Name="phoneTextBlock" Text="(123) 456-7890" FontSize="15" FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
